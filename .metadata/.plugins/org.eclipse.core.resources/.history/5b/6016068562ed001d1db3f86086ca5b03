package study02;

import java.util.Scanner;

public class Method {
	
	static int method01(int a) {
		
		while(true) {
			if(a==1) {
				return 1;
				break;
			}
			
			return a*(method01(a)-1);
		}		
	}
	
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		method01(a);
	}
}
